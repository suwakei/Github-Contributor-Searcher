{
  "manifest_version": 3,
  "name": "GitHub Contributor Search",
  "version": "1.0",
  "description": "GitHubのcontributorページでユーザー名を検索できる拡張機能",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*/*/contributors"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/*/contributors",
        "https://github.com/*/*/graphs/contributors?selectedMetric=*",
        "https://github.com/*/*/graphs/contributors?selectedMetric=*&from=*"
      ],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "public/icon.png"
  }
}
