{
  "manifest_version": 3,
  "name": "GitHub Contributor Search",
  "version": "1.0",
  "description": "Add a username search form to the GitHub contributor page",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*/*/contributors"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/contributors"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
