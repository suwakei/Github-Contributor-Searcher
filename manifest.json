{
  "manifest_version": 3,
  "name": "GitHub Contributor Search",
  "default_locale": "ja",
  "version": "1.0",
  "description": "GitHubのcontributorページでユーザー名を検索できる拡張機能",
  "permissions": [],
  "host_permissions": [
    "https://github.com/*/*/graphs/contributors*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/graphs/contributors*"
      ],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  }
}
