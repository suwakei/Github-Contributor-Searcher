{
  "manifest_version": 3,
  "name": "GitHub Contributors Search",
  "version": "1.0",
  "description": "Add a username search form to the GitHub contributors page",
  "permissions": [],
  "host_permissions": ["https://github.com/*/*/graphs/contributors*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/graphs/contributors*"],
      "js": ["src/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
